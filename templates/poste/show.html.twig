{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/postList_postDescription/style.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/postList_postDescription/style-show.css') }}">
{% endblock %}

{% block title %}{{ poste.label }}{% endblock %}

{% block body %}
    <h1 class="bckgrnd-text mt-3">{{ poste.label }}</h1>
    <div class="container-mt-3">
        <ul class="list-group">
            <li class="list-group-item"><div class="text-bold">Lieu:</div> {{ poste.lieu }}</li>

            <li class="list-group-item"><div class="text-bold">Date de d√©but:</div> {{ poste.datedeb|date('d/m/Y') }}</li>

            {% if poste.datefin is not null %}
                <li class="list-group-item"><div class="text-bold">Date de fin:</div> {{ poste.datefin|date('d/m/Y') }}</li>
            {% endif %}

            <li class="list-group-item"><div class="text-bold">Description:</div> {{ poste.description }}</li>

            <li class="list-group-item"><div class="text-bold">Tag:</div> {{ poste.tag.nom }}</li>

            <li class="list-group-item"><div class="text-bold">Entreprise:</div> {{ poste.entreprise.nom }}</li>

            <button class="list-group-item-btn-btn-success"><a href="{{ path('app_insc_poste',{'id' : poste.id}) }}" class="text-button">inscrivez vous</a></button>
        </ul>
    </div>
{% endblock %}
